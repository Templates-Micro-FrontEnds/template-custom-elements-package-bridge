{
  "name": "@templates-micro-frontends/bridge",
  "version": "0.2.2",
  "description": "Framework-agnostic bridge for Micro Frontends using Custom Elements",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "exports": {
    ".": {
